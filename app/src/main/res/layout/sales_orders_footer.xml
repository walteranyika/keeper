<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sales_footer"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:paddingRight="8dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:text=""
            android:textSize="11sp"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/tvReceiptCounter"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvReceiptTotals"
            android:textColor="#fff"
            android:text="TOTAL KES 0.0"
            android:textSize="11sp"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

   <LinearLayout
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <mehdi.sakout.fancybuttons.FancyButton
          android:id="@+id/products"
          android:layout_width="50dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:padding="10dp"
          fancy:fb_defaultColor="@color/colorPrimary"
          fancy:fb_iconPaddingLeft="0dp"
          fancy:fb_iconPaddingRight="0dp"
          fancy:fb_borderColor="#FFFFFF"
          fancy:fb_borderWidth="1dp"
          fancy:fb_focusColor="#313131"
          fancy:fb_iconResource="@mipmap/ic_add_shopping_cart"
          fancy:fb_radius="64dp">
      </mehdi.sakout.fancybuttons.FancyButton>
      <mehdi.sakout.fancybuttons.FancyButton
          android:id="@+id/contacts"
          android:layout_width="50dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_height="50dp"
          android:layout_marginLeft="15dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:padding="10dp"
          android:onClick="openContacts"
          fancy:fb_defaultColor="@color/colorPrimary"
          fancy:fb_iconPaddingLeft="0dp"
          fancy:fb_iconPaddingRight="0dp"
          fancy:fb_borderColor="#FFFFFF"
          fancy:fb_borderWidth="1dp"
          fancy:fb_focusColor="#313131"
          fancy:fb_iconResource="@mipmap/ic_contacts"
          fancy:fb_radius="64dp">
      </mehdi.sakout.fancybuttons.FancyButton>
      <mehdi.sakout.fancybuttons.FancyButton
          android:id="@+id/reports"
          android:layout_width="50dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_height="50dp"
          android:layout_marginLeft="15dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:onClick="openInventory"
          android:padding="10dp"
          fancy:fb_defaultColor="@color/colorPrimary"
          fancy:fb_iconPaddingLeft="0dp"
          fancy:fb_iconPaddingRight="0dp"
          fancy:fb_borderColor="#FFFFFF"
          fancy:fb_borderWidth="1dp"
          fancy:fb_focusColor="#313131"
          fancy:fb_iconResource="@mipmap/ic_assignment"
          fancy:fb_radius="64dp">
      </mehdi.sakout.fancybuttons.FancyButton>
      <mehdi.sakout.fancybuttons.FancyButton
          android:id="@+id/btnCheckOut"
          android:layout_width="50dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_height="50dp"
          android:layout_marginLeft="15dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:padding="10dp"
          fancy:fb_defaultColor="@color/colorPrimary"
          fancy:fb_iconPaddingLeft="0dp"
          fancy:fb_iconPaddingRight="0dp"
          fancy:fb_borderColor="#FFFFFF"
          fancy:fb_borderWidth="1dp"
          fancy:fb_focusColor="#313131"
          fancy:fb_iconResource="@mipmap/ic_chevron_right"
          fancy:fb_radius="64dp">
      </mehdi.sakout.fancybuttons.FancyButton>
